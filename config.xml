<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rianwardana.phonebot" version="16.08.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PhoneBot</name>
    <description>
        Robot smartphone dari Makernesia
    </description>
    <author email="gmail@rianwardana.com" href="http://rianwardana.com">
        Rian Wardana
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/icon.png" />
        <preference name="Fullscreen" value="true" />
        <preference name="Orientation" value="portrait" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-media" spec="~2.3.0" />
    <plugin name="cordova-plugin-bluetooth-serial" spec="~0.4.5" />
    <plugin name="com.mbppower.camerapreview" spec="~0.0.8" />
</widget>
